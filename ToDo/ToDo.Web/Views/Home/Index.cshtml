@model AppUserSignInModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LoginLogoutLayout.cshtml";
}
<form asp-action="SignIn" method="post" class="w-50 mt-5 mx-auto p-4 shadow">
    <div class="form-group">
        <label asp-for="Username"></label>
        <span asp-validation-for="Username" class="text-danger"></span>
        <input asp-for="Username" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-check">
        <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label"></label>
    </div>
    <a asp-action="SignUp" class="btn btn-warning btn-sm">Sign Up</a>
    <input type="submit" class="btn btn-info btn-sm" value="Sign In" />

</form>