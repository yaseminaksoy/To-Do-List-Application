@model List<PriorityListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count != 0)
{
    <a asp-action="AddPriorityTask" asp-controller="Priority" class="btn btn-sm btn-info my-2">Add New Priority Task</a>
    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th>Description</th>
                <th>Operation</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Description</td>
                    <td>
                        <a asp-action="UpdatePriority" asp-controller="Priority" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Update</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="text-center mt-4">
        <p class="lead">
            No record for Priority Task!
        </p>
        <a asp-action="AddPriorityTask" asp-controller="Priority" class="btn btn-sm btn-info my-2">Add New Priority Task</a>
    </div>
}
